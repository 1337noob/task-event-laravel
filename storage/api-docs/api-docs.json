    "components": {
        "schemas": {
            "AuthLoginRequest": {
                "required": [
                    "login",
                    "password"
                ],
                "properties": {
                    "login": {
                        "type": "string",
                        "example": "user"
                    },
                    "password": {
                        "type": "string",
                        "example": "password"
                    }
                },
                "type": "object"
            },
            "AuthRegisterRequest": {
                "required": [
                    "name",
                    "login",
                    "password"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "example": "New user"
                    },
                    "login": {
                        "type": "string",
                        "example": "user"
                    },
                    "password": {
                        "type": "string",
                        "example": "password"
                    }
                },
                "type": "object"
            },
            "StoreTaskRequest": {
                "required": [
                    "title"
                ],
                "properties": {
                    "title": {
                        "type": "string",
                        "example": "New Task"
                    }
                },
                "type": "object"
            },
            "UpdateTaskRequest": {
                "required": [
                    "title"
                ],
                "properties": {
                    "title": {
                        "type": "string",
                        "example": "Updated"
                    }
                },
                "type": "object"
            },
            "TaskListResponse": {
                "properties": {
                    "data": {
                        "properties": {
                            "tasks": {
                                "type": "array",
                                "items": {
                                    "$ref": "#/components/schemas/Task"
                                }
                            }
                        },
                        "type": "object"
                    },
                    "meta": {
                        "properties": {
                            "current_page": {
                                "type": "integer",
                                "example": 1
                            },
                            "per_page": {
                                "type": "integer",
                                "example": 10
                            },
                            "total": {
                                "type": "integer",
                                "example": 25
                            },
                            "last_page": {
                                "type": "integer",
                                "example": 3
                            },
                            "from": {
                                "type": "integer",
                                "example": 1
                            },
                            "to": {
                                "type": "integer",
                                "example": 10
                            }
                        },
                        "type": "object"
                    },
                    "links": {
                        "properties": {
                            "first": {
                                "type": "string",
                                "example": "http://localhost:8000/api/tasks?page=1"
                            },
                            "last": {
                                "type": "string",
                                "example": "http://localhost:8000/api/tasks?page=3"
                            },
                            "prev": {
                                "type": "string",
                                "nullable": true
                            },
                            "next": {
                                "type": "string",
                                "example": "http://localhost:8000/api/tasks?page=2"
                            }
                        },
                        "type": "object"
                    }
                },
                "type": "object"
            },
            "TaskResponse": {
                "properties": {
                    "data": {
                        "properties": {
                            "task": {
                                "$ref": "#/components/schemas/Task"
                            }
                        },
                        "type": "object"
                    }
                },
                "type": "object"
            },
            "Task": {
                "properties": {
                    "id": {
                        "type": "string",
                        "example": "0199e304-798d-72ad-8f41-80bdc6de0d90"
                    },
                    "title": {
                        "type": "string",
                        "example": "New Task"
                    },
                    "user_id": {
                        "type": "string",
                        "example": "0199dd17-88ea-7037-ba2d-cf60e784f928"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-10-14T13:59:05.000000Z"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-10-14T13:59:05.000000Z"
                    }
                },
                "type": "object"
            },
            "UserResponse": {
                "properties": {
                    "data": {
                        "properties": {
                            "user": {
                                "$ref": "#/components/schemas/User"
                            }
                        },
                        "type": "object"
                    }
                },
                "type": "object"
            },
            "User": {
                "properties": {
                    "id": {
                        "type": "string",
                        "example": "0199e304-798d-72ad-8f41-80bdc6de0d90"
                    },
                    "name": {
                        "type": "string",
                        "example": "Name"
                    },
                    "login": {
                        "type": "string",
                        "example": "user1"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-10-14T13:59:05.000000Z"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-10-14T13:59:05.000000Z"
                    }
                },
                "type": "object"
            }
