                "tags": [
                    "Tasks"
                ],
                "summary": "Update a task",
                "operationId": "c61217823cd9961a860410e0cec6912e",
                "parameters": [
                    {
                        "name": "uuid",
                        "in": "path",
                        "description": "UUID",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
